   "source": [
    "def nb_year(p0, percent, aug, p):\n",
    "    years = 0\n",
    "    \n",
    "    while p0 < p:\n",
    "        years += 1\n",
    "        p0 = p0*(1+(percent*.002))+aug\n",
    "        print(p0)\n",
    "        print(years)\n",
    "    return years\n",
    "     "
   ]
